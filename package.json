{
  "name": "markdown-spell-check",
  "displayName": "Markdown Spell Check",
  "description": "Local spell checking for Markdown files in VS Code",
  "version": "0.1.0",
  "publisher": "rorymcmahon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rorymcmahon/markdown-spell-check.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "spell check",
    "spelling",
    "grammar"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Markdown Spell Check",
      "properties": {
        "markdownSpellCheck.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable spell checking for Markdown files"
        },
        "markdownSpellCheck.language": {
          "type": "string",
          "default": "en-AU",
          "description": "Dictionary language to use for spell checking",
          "enum": ["en-AU", "en-US", "en-GB"],
          "enumDescriptions": [
            "Australian English",
            "American English", 
            "British English"
          ]
        },
        "markdownSpellCheck.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable markdown formatting assistance"
        },
        "markdownSpellCheck.formatting.blankLines": {
          "type": "boolean",
          "default": true,
          "description": "Check for proper blank lines around headings and code blocks"
        },
        "markdownSpellCheck.formatting.trailingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "Check for trailing whitespace"
        },
        "markdownSpellCheck.formatting.listConsistency": {
          "type": "boolean",
          "default": true,
          "description": "Check for consistent list marker usage"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'No tests yet - skipping test step'"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "24.x",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "nspell": "^2.1.5"
  }
}
